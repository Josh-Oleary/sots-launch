<%- include('partials/header') %> 
    <section id="contact-hero">
        <div id="contact-hero-background">
<%- include('partials/navbar') %> 
    <div class="contact">
      <div class="page-cta">
        <h2>Get In Touch!</h2>
      </div>
        <div class="page-container">
            <form  id='contact-form' action="/contact" method='POST' enctype="x-www-form-urlencoded">
                <div class="contact-form-container row">
                    <div class="top-row">
                        <input type="text" name='fullName' class="form-control" placeholder="Full Name" aria-label="First name" required>
                    </div>
                    <div class="top-row">
                        <input type="email" name='email' class="form-control" placeholder="Email Address" aria-label="Email Address" required>
                    </div>
                    <div id="contact-msg" class="input-group">
                        <span class="input-group-text">Message</span>
                        <input type="text" name='content' class='form-control' required>
                    </div>
                    <div class="contactBtn"> 
                        <button id="submitBtn" type="submit" value='submit' class="btn btn-secondary btn-lg">Submit</button>
                    </div>
                </div>
            </form>
           
        </div>
    </div>
    </section>
      <%- include('partials/footer')%>